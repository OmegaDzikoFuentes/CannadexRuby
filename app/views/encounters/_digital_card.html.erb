<div style="width: 600px; height: 800px; background: linear-gradient(to bottom, #1a3a24, #2e5c3e); border: 4px solid #4caf50; border-radius: 20px; overflow: hidden; font-family: Arial, sans-serif; color: #ffffff; text-align: center; position: relative; box-shadow: 0 0 20px rgba(0,0,0,0.5);">
  <!-- Background watermark -->
  <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%) rotate(-45deg); font-size: 100px; opacity: 0.1; color: #ffffff;">Cannadex</div>
  
  <!-- Header with Strain Name -->
  <h1 style="margin: 20px 0; font-size: 36px; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);"><%= encounter.strain.name %></h1>
  
  <!-- Bud Photo -->
  <% if encounter.photos.attached? %>
    <img src="<%= rails_blob_url(encounter.photos.first, only_path: true) %>" alt="Bud Photo" style="width: 300px; height: 300px; object-fit: cover; border-radius: 50%; border: 4px solid #ffffff; margin-bottom: 20px;">
  <% else %>
    <img src="https://via.placeholder.com/300x300?text=No+Photo" alt="No Bud Photo" style="width: 300px; height: 300px; object-fit: cover; border-radius: 50%; border: 4px solid #ffffff; margin-bottom: 20px;">
  <% end %>
  
  <!-- Ratings Grid -->
  <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 10px; margin: 0 20px 20px; font-size: 18px;">
    <div style="background: rgba(255,255,255,0.1); padding: 10px; border-radius: 10px;">
      <strong>Taste:</strong> <%= encounter.taste_rating %>/10
    </div>
    <div style="background: rgba(255,255,255,0.1); padding: 10px; border-radius: 10px;">
      <strong>Smell:</strong> <%= encounter.smell_rating %>/10
    </div>
    <div style="background: rgba(255,255,255,0.1); padding: 10px; border-radius: 10px;">
      <strong>Texture:</strong> <%= encounter.texture_rating %>/10
    </div>
    <div style="background: rgba(255,255,255,0.1); padding: 10px; border-radius: 10px;">
      <strong>Potency:</strong> <%= encounter.potency_rating %>/10
    </div>
  </div>
  
  <!-- Overall Rating -->
  <p style="font-size: 24px; margin: 0 20px 10px; background: #4caf50; padding: 10px; border-radius: 10px;">
    Overall: <%= encounter.overall_rating %>/10
  </p>
  
  <!-- Description Snippet -->
  <p style="margin: 0 20px 10px; font-size: 16px; font-style: italic;">
    <%= encounter.description&.truncate(100) || 'No description provided' %>
  </p>
  
  <!-- Experience Highlights -->
  <p style="margin: 0 20px 10px; font-size: 16px;">
    Experience: <%= encounter.experience&.truncate(80) || 'No experience noted' %>
  </p>
  
  <!-- Location and Date -->
  <div style="position: absolute; bottom: 20px; left: 20px; right: 20px; font-size: 14px; opacity: 0.8;">
    <p>Encountered at: <%= encounter.location_name || 'Unknown Location' %></p>
    <p>On: <%= encounter.encountered_at.strftime('%B %d, %Y') %></p>
  </div>
  
  <!-- Footer -->
  <div style="position: absolute; bottom: 10px; right: 20px; font-size: 12px; opacity: 0.6;">
    Generated by Cannadex
  </div>
</div>